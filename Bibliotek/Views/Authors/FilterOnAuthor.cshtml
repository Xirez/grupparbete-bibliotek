@model Library.Models.Author
@{
    ViewData["Title"] = "Index";
}


<table class="table">
    <thead>
        <tr>
            <th>
                <p>Showing books by @Model.FullName</p>
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.AuthorBooks == null)
        {
            <tr>
                <td>
                    <span>no books found</span>
                </td>
            </tr>
        }
        else
        {
            @foreach (var item in Model.AuthorBooks)
            {
                <tr>
                    <td>
                        @item.Title
                    </td>
                   
                </tr>
            }
        }
    </tbody>
</table>
